<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:id="@+id/disconnectedLayout"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Armband nicht verbunden"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/switch_to_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bluetooth Einstellungen öffnen" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/startactivity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_margin="100dp"
            android:layout_gravity="center"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startWorkoutButton"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:text="START WORKOUT"
            app:cornerRadius="1000dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activeWorkout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentWorkoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="Aktuelle Übung:"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/exerciseNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Bizepscurls"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/repdisplayName"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="Reps:"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/repCounterDisplay"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setcounterName"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="Sets:"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/setcounterDisplay"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">

            <Button
                android:id="@+id/continueWorkout"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:text="Satz pausieren" />

            <Button
                android:id="@+id/abort"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:text="Training abbrechen" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
